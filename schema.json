{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EmailTriageResult",
  "type": "object",
  "required": [
    "domain",
    "intent",
    "priority",
    "confidence",
    "extractions",
    "recommended_actions"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "enum": [
        "audit",
        "expiry",
        "followup",
        "payment",
        "scheduling",
        "other",
        "noise"
      ]
    },
    "intent": {
      "type": "string",
      "enum": [
        "request",
        "deadline",
        "status_update",
        "followup_needed",
        "payment_commitment",
        "meeting",
        "fyi",
        "other"
      ]
    },
    "priority": {
      "type": "string",
      "enum": [
        "urgent",
        "high",
        "normal",
        "ignore"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": {
      "type": "string"
    },
    "extractions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "summary"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "deadline",
              "expiry",
              "followup",
              "payment",
              "meeting",
              "document_request",
              "risk"
            ]
          },
          "summary": {
            "type": "string"
          },
          "due_date": {
            "type": [
              "string",
              "null"
            ],
            "description": "ISO YYYY-MM-DD if known"
          },
          "amount": {
            "type": [
              "number",
              "null"
            ]
          },
          "currency": {
            "type": [
              "string",
              "null"
            ]
          },
          "invoice_id": {
            "type": [
              "string",
              "null"
            ]
          },
          "counterparty": {
            "type": [
              "string",
              "null"
            ]
          },
          "confidence": {
            "type": [
              "number",
              "null"
            ],
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    },
    "recommended_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "action",
          "title"
        ],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "create_task",
              "send_reminder",
              "add_calendar_hold",
              "suppress",
              "review_needed"
            ]
          },
          "title": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          },
          "due_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "urgency_window": {
            "type": [
              "string",
              "null"
            ],
            "enum": [
              null,
              "72h",
              "7d",
              "30d"
            ]
          }
        }
      }
    }
  }
}